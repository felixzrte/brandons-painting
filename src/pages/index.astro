---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import { Button } from '@/components/ui/button';

import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card"
---

<Layout title="Brandons Painting & Rennovations | Home">
	<main >
		<div class="px-4 md:px-8 lg:px-16 xl:px-32">
			<Hero />
		</div>

		<section class="bg-[#6F785A] mt-16">
  		<div class="px-4 py-16 md:px-8 lg:px-16 xl:px-32">
    		<div class="grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-16 text-center sm:text-left ">
      		<div
        		class="relative h-64 overflow-hidden rounded-lg lg:order-last lg:h-full"
      			>
        		<img
          		alt="Party"
          		src="/building-1.jpeg"
          		class="absolute inset-0 h-full w-full object-cover"
        		/>
      		</div>
      		<div class="lg:py-24">
        		<h2 class="text-xs text-slate-200 tracking-widest font-light title-font mb-1">OUR EXPERIENCE</h2>
        		<h2 class="text-2xl md:text-3xl font-semibold title-font text-white">
          		We focus on customer satisfaction and quality
        		</h2>

        		<p class="mt-4 text-slate-200">
        			We work around your busy schedule and consult with you on all aspects of 
        			color selection and color coordination for your project to ensure that the 
        			project is completed according to your preferences. We strive to provide honest, reliable, residential and commercial painting services 
        			that stand head and shoulders above the rest. We combine the industry's best paint with
        			our passion for detail to exceed your expectations.  
        		</p>
        		
      		<Button variant="outline" className='text-white mt-4'>About Us</Button> 
      		</div>
    		</div>
  		</div>
		</section>
	</main>
</Layout>

