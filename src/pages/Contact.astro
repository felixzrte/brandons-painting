---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Brandon's Painting & Renovation | Contact">
  <main class="px-4 md:px-8 lg:px-16 xl:px-32 lg:grid lg:grid-cols-2 mt-8">
    <div
      class="relative overflow-hidden bg-no-repeat bg-cover rounded-lg h-60 lg:h-full"
      style="
      background-position: 50%;
      background-image: url('/painting-room.jpg');
      "
    >
      <div
        class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed"
        style="background-color: rgba(0, 0, 0, 0.75)"
      >
        <div class="flex justify-center items-center h-full">
          <div class="text-center text-white px-6 md:px-12">
            <h1 class="text-5xl md:text-6xl xl:text-7xl font-bold">
              Let's Connect
            </h1>
          </div>
        </div>
      </div>
    </div>
    <!-- Calendly inline widget begin -->
    <div
      class="calendly-inline-widget"
      data-url="https://calendly.com/felixzarate14/30min?primary_color=6f785a"
      style="min-width:320px;height:750px;"
    >
    </div>
    <script
      type="text/javascript"
      src="https://assets.calendly.com/assets/external/widget.js"
      async></script>
    <!-- Calendly inline widget end -->
  </main>
</Layout>
